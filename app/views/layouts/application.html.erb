<!DOCTYPE html>
<html>
  <head>
    <title>AwesomeAPP</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>


  </head>

  <body>
    <% if user_signed_in? %>
      <ul class="menu">
        <li class="active"><a href="/">Home</a></li>
        <li class=""><%= link_to 'New Employee', new_employee_path %></li>
        <li class=""><%= link_to 'Employees', employees_path %></li>
        <li class=""><%= link_to "Sign out", destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </ul>
    <% end %>
    <%= yield %>
    <div class="container-fluid">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
  </body>
</html>
